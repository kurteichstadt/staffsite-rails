<div id="welcome">
  Stories<span class="smaller">&nbsp;</span>
</div>

<div id="page_interior">
<% content_for :body_content_title, @item.title %>
<% content_for :body_content_left do %>
  <article class="news_item">
    <h2><%= @item.title %></h2>
    <p class="news_date"><%= t('.published') %> <%= l(@item.publish_date, :format => :long) %></p>
    <div class="article_content">
    <% if @item.source.present? %>
      <p>
        <small><%= t('.source') %> <%= @item.source %></small>
      </p>
    <% end %>
    <%= @item.body.html_safe %>
    <p>
      <%= link_to t('.back_to_index'), refinery.news_items_path %>
    </p>
    </div>
  </article>
<% end %>
<% content_for :body_content_right, render(:partial => 'recent_posts') %>

<%= render :partial => "/refinery/content_page" %>
</div>
