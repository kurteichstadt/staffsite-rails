<article class="news_item">
<h2><%= item.title %></h2>
<p class="news_date">Published <%= l(item.publish_date, :format => :long) %></p>
<% if item.source.present? %>
  <p>
    <small>by <%= item.source %></small>
  </p>
<% end %>

<%= render 'refinery/news/shared/big_image', item: item %>

<div class="article_content">
  <%== item.body %>
  <p>
    <%= link_to 'Back to Index', refinery.news_items_path %>
  </p>
</div>
</article>
