<article class="item_post news_item_truncated" id="<%= dom_id(item) %>">
  <header>
    <h2><%= link_to item.title, refinery.news_item_path(item) %></h2>
    <section class='details'>
      <time datetime="<%=l item.publish_date.to_date, :format => :default %>" class='posted_at'>
        <%= t('created_at', :scope => 'refinery.news.shared.items', :when => l(item.publish_date.to_date, :format => :short)) %>
      </time>
    </section>
  </header>
  <section class='clearfix'>
    <% if news_item_teaser_enabled? %>
      <%= news_item_teaser(item) %>
    <% else %>
      <%= item.body.html_safe %>
    <% end %>
    <%= link_to t('read_more', :scope => 'refinery.news.shared.items'), refinery.news_item_path(item) if news_item_teaser_enabled? %>
  </section>

</article>
